    $discontinued = $iconDir.'discontinued'; 


    $contain = 'Yes';
    $notcontain = 'No';

    $containArray = [];
    $count = 0;

    $discontinuedvalue = $_product->getResource()->getAttribute('discontinued')->getFrontend()->getValue($_product);

    switch ($discontinuedvalue) {
